<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:skia="clr-namespace:SkiaSharp.Extended.UI.Controls;assembly=SkiaSharp.Extended.UI"
             xmlns:material="http://sharpnado.com"
             x:Class="Deutschland_Game.View.JogarPage"
             Title="JogarPage"
             Shell.NavBarIsVisible="False">

    <ContentPage.Resources>
        <Style TargetType="Label">
            <Setter Property="FontFamily" Value="PeachCake" />
        </Style>
        <Style TargetType="Button">
            <Setter Property="FontFamily" Value="PeachCake" />
        </Style>
        <ResourceDictionary />
    </ContentPage.Resources>

    <VerticalStackLayout>

        <Grid>

            <Image Source="{Binding LocalImagePath}"  
                Aspect="AspectFill"
                VerticalOptions="FillAndExpand"
                HorizontalOptions="FillAndExpand" 
                Margin="0, 0, 0, 0"
            />

            <Grid>

                <Grid
                    
                x:Name="conquistasComponent"
                VerticalOptions="Start"
                HorizontalOptions="End"
                Margin="0, -15, 100, 0"
                >

                    <Grid
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    WidthRequest="180"
                    >

                        <Image
                            Source="placa_conquistas.png"          
                        />

                        <FlexLayout
            
                            HeightRequest="130"
                            WidthRequest="120"
                            Margin="15, 0, 0, 0"
                            Wrap="Wrap"
                            Direction="Row"
                            JustifyContent="Start"
                            AlignItems="Center"
                            AlignContent="Center"
                            VerticalOptions="End"
                            HorizontalOptions="CenterAndExpand">

                            <HorizontalStackLayout
                            Spacing="2"
                            Margin="0, 0, 6, 3">
                                <Image
                                Source="popularidade_conquista.png"
                                WidthRequest="22"/>
                                <Label
                                Text="{Binding PopularidadeText}"
                                FontSize="17"
                                TextColor="White"/>

                                
                            </HorizontalStackLayout>
                            <HorizontalStackLayout
                            Spacing="2"
                            Margin="0, 0, 0, 3">
                                <Image
                                Source="igreja_conquista.png"
                                WidthRequest="22"/>
                                <Label
                                Text="{Binding IgrejaText}"
                                FontSize="17"
                                TextColor="White"/>
                            </HorizontalStackLayout>
                            <HorizontalStackLayout
                            Spacing="2"
                            Margin="0, 0, 6, 3">
                                <Image
                                Source="diplomacia_conquista.png"
                                WidthRequest="22"/>
                                <Label
                                Text="{Binding DiplomaciaText}"
                                FontSize="17"
                                TextColor="White"/>
                            </HorizontalStackLayout>
                            <HorizontalStackLayout
                            Spacing="2"
                            Margin="0, 0, 0, 3">
                                <Image
                                Source="dinheiro_conquista.png"
                                WidthRequest="22"/>
                                <Label
                                Text="{Binding DinheiroText}"
                                FontSize="17"
                                TextColor="White"/>
                            </HorizontalStackLayout>
                            <HorizontalStackLayout
                            Spacing="2"
                            Margin="0, 0, 6, 3">
                                <Image
                                Source="exercito_conquista.png"
                                WidthRequest="22"/>
                                <Label
                                Text="{Binding ExercitoText}"
                                FontSize="17"
                                TextColor="White"/>
                            </HorizontalStackLayout>

                        </FlexLayout>

                        <Label
                        IsVisible="False"
                        x:Name="populaidadeAdicional"
                        Text=""
                        FontSize="20"
                        Margin="50, 50, 0, 0"/>

                        <Label
                        IsVisible="False"
                        x:Name="igrejaAdicional"
                        Text=""
                        FontSize="20"
                        Margin="110, 50, 0, 0"/>

                        <Label
                            
                        IsVisible="False"
                        x:Name="economiaAdicional"
                        Text=""
                        FontSize="20"
                        Margin="140, 100, 0, 0"
                        Rotation="10"/>

                        <Label
                        IsVisible="False"  
                        x:Name="diplomaciaAdicional"
                        Text=""
                        FontSize="20"
                        Margin="15, 80, 0, 0"
                        Rotation="-10"/>

                        <Label
                        IsVisible="False"
                        x:Name="exercitoAdicional"
                        Text=""
                        FontSize="20"
                        Margin="80, 135, 0, 0"/>



                    </Grid>

                </Grid>
                <!-- grid placa das conquistas-->

                <Grid
                    x:Name="personagemComponent"
                    VerticalOptions="End"
                    HorizontalOptions="End"
                    Margin="0 , 0, -110, 100"
                    >

                    <Image
                        WidthRequest="100"
                        MaximumHeightRequest="300"
                        Source="{Binding PersonagemImagePath}"
                        />

                </Grid>
                


                <Grid
                x:Name="dialogoContainer"
                VerticalOptions="End"
                HorizontalOptions="Center"
                WidthRequest="650"
                IsVisible="True"
                Margin="0, 0, 0, 100"
                >

                    <Image
                    Source="dialogo_folha.png"
                />

                    <VerticalStackLayout
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Margin="0, 0, 0, 30"
                    WidthRequest="500"
        
                    >
                        <Label
                        x:Name="personagemNomeLabel"
                        Text=""
                        TextColor="#474747"    
                        FontSize="17"
                        />
                        <Label  
                        x:Name="dialogoLabel"
                        Text=""
                        TextColor="Black"    
                        FontSize="17"
                    />
                    </VerticalStackLayout>



                </Grid>



                <Grid
                x:Name="tutorialComponent"
                IsVisible="False"
                VerticalOptions="FillAndExpand"
                HorizontalOptions="FillAndExpand">

                    <Grid
                    BackgroundColor="Black"
                    Opacity=".6"
                ></Grid>

                    <Grid
                    HorizontalOptions="Start"
                    VerticalOptions="Center"
                    Margin="0, 0, 0, 120"
                    >
                        <skia:SKLottieView
                        Source="greenarrow.json"
                        RepeatCount="-1"
                        RepeatMode="Restart"
                        WidthRequest="200"
                        HeightRequest="100"
                        Rotation="180"
                        />
                        <Label
                        Margin="0, 80, 0, 0"
                        Text="Para aceitar"
                        FontSize="22"
                        TextColor="#00c1a2"
                        HorizontalOptions="Center"
                        />
                    </Grid>

                    <Label
                    HorizontalOptions="Center"
                    Text="Arraste"
                    FontSize="32"
                    Margin="0, 40, 0, 0"
                    TextColor="White"/>

                    <Grid
                    VerticalOptions="Center"
                    HorizontalOptions="End"
                    Margin="0, 0, 0, 120">
                        <skia:SKLottieView
                        Source="redarrow.json"
                        RepeatCount="-1"
                        RepeatMode="Restart"
                        WidthRequest="200"
                        HeightRequest="100"
                        Background="Transparent"
                        />
                        <Label
                        Text="Para recusar"
                        FontSize="22"
                        TextColor="#de524b"
                        HorizontalOptions="Center"
                        Margin="0, 80, 0, 0"
                        />
                    </Grid>


                </Grid>

            </Grid>

            <Grid
                VerticalOptions="FillAndExpand"
                HorizontalOptions="FillAndExpand"
                IsVisible="False"
                >

                <BoxView
                    Background="Black"
                    Opacity=".4">
                </BoxView>

                <material:MaterialFrame
                    MaterialTheme="AcrylicBlur"
                    MaterialBlurStyle="Dark"
                    Opacity=".8"
                    Elevation="10"
                    HasShadow="False"
                    AcrylicGlowColor="#000000"
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="FillAndExpand"
                    />

                <skia:SKLottieView
                Source="conffets.json"
                RepeatCount="2"
                RepeatMode="Restart"
                VerticalOptions="FillAndExpand"
                Background="Transparent"
                />

                <Grid
                   WidthRequest="350"
                    >
                    <Image Source="relatorio_image.png"
                            Margin="0, 0, 0, 95"/>

                    <VerticalStackLayout
                        HorizontalOptions="Center"
                        Margin="0, 90, 0, 0">

                        <Label
                                VerticalOptions="Center"
                                Text="Período Finalizado!&#x0a;Sacro Império (962 - 1806)"
                                HorizontalTextAlignment="Center"
                                FontSize="24"
                                TextColor="Black"
                                    Margin="0, 0, 0, 5"/>

                        <HorizontalStackLayout
                            VerticalOptions="Center">
                            <Image
                                Source="popularidade_conquista.png"
                                WidthRequest="30"
                                Margin="0, 0, 5, 5"/>
                            <Label
                                Text="Popularidade +50"
                                FontSize="25"
                                TextColor="#339300"/>
                        </HorizontalStackLayout>
                        <HorizontalStackLayout
                            VerticalOptions="Center">
                            <Image
                            Source="igreja_conquista.png"
                            WidthRequest="30"
                            Margin="0, 0, 5, 5"/>
                            <Label
                            Text="Igreja +50"
                            FontSize="25"
                            TextColor="White"/>
                        </HorizontalStackLayout>
                        <HorizontalStackLayout
                            VerticalOptions="Center">
                            <Image
                            Source="diplomacia_conquista.png"
                            WidthRequest="30"
                            Margin="0, 0, 5, 5"/>
                            <Label
                            Text="Diplomacia +50"
                            FontSize="25"
                            TextColor="#339300"/>
                        </HorizontalStackLayout>
                        <HorizontalStackLayout
                            VerticalOptions="Center">
                            <Image
                            Source="dinheiro_conquista.png"
                            WidthRequest="30"
                            Margin="0, 0, 5, 5"/>
                            <Label
                            Text="Economia -50"
                            FontSize="25"
                            TextColor="#FF0000"/>
                        </HorizontalStackLayout>
                        <HorizontalStackLayout
                            VerticalOptions="Center">
                            <Image
                            Source="exercito_conquista.png"
                            WidthRequest="30"
                            Margin="0, 0, 5, 5"/>
                            <Label
                            Text="Exército -100"
                            FontSize="25"
                            TextColor="#FF0000"/>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </Grid>

                <VerticalStackLayout
                    VerticalOptions="End"
                    HorizontalOptions="End"
                    Margin="0, 0, 30, 120">
                    <Grid VerticalOptions="End" Padding="10">
                        <Button
                            WidthRequest="150"
                            BackgroundColor="Transparent"
                            />
                        
                        <Image 
                            Source="scroll.png" 
                            WidthRequest="150"/>
                        
                        <Label Text="Continuar"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="Black"
                               HorizontalOptions="Center"
                               VerticalOptions="Center" 
                                />
                    </Grid>
                </VerticalStackLayout>

            </Grid>



            <Grid.GestureRecognizers>
                <!-- para validar a interação das escolhas do usuario -->
                <TapGestureRecognizer Tapped="PassDialog"/>
                <SwipeGestureRecognizer Direction="Left" Swiped="DialogAccepted" />
                <SwipeGestureRecognizer Direction="Right" Swiped="DialogRefused" />
            </Grid.GestureRecognizers>

        </Grid> <!-- grid mais externo -->
        
    </VerticalStackLayout>
</ContentPage>