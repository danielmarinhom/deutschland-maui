<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Deutschland_Game.View.LoadingPage"
             BackgroundColor="Black"
             NavigationPage.HasNavigationBar="False">

    <Grid VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
        <Image Source="homepage_background.png" Aspect="AspectFill" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" />

        <!-- title -->
        <Label Text="Sacro Império"
               FontSize="40"
               FontAttributes="Bold"
               TextColor="White"
               HorizontalOptions="Center"
               VerticalOptions="Start"
               Margin="0,50,0,0" />

        <!-- loading message -->
        <Label Text="Carregando história..."
               FontSize="20"
               TextColor="White"
               HorizontalOptions="Center"
               VerticalOptions="CenterAndExpand" />

        <!-- progress bar -->
        <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
            <ProgressBar x:Name="progressBar" WidthRequest="300" HeightRequest="15" Progress="0" />
            <Label x:Name="progressLabel" Text="0%" TextColor="White" HorizontalOptions="Center" />
        </StackLayout>
        
    </Grid>
</ContentPage>
